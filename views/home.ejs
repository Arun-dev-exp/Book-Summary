<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All-Post</title>
     <link rel="stylesheet" href="/style.css"/>
</head>
<body>
    <div class="container">
        <header class="main-header">
            <h1 class="site-title">BOOK World</h1>
            <a href="/new-post" class="btn btn-primary new-post-btn">New Post</a>
        </header>

        <div class="sort-controls">
            <form method="get" action="/" class="sort-form">
                <div class="form-group">
                    <label for="sort" class="form-label">Sort by:</label>
                    <select name="sort" id="sort" class="form-select">
                        <option value="summary_date">Date</option>
                        <option value="rating">Rating</option>
                        <option value="title">Title</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="direction" class="form-label">Order:</label>
                    <select name="direction" id="direction" class="form-select">
                        <option value="desc">Descending</option>
                        <option value="asc">Ascending</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-secondary apply-btn">Apply</button>
            </form>
        </div>

        <main class="posts-container">
            <% posts.forEach((post) => { %>
                <article class="post-card" id="post-<%= post.id %>">
                    <header class="post-header">
                        <h2 class="post-title"><%= post.title %></h2>
                    </header>
                    
                    <div class="post-content">
                        <div class="book-cover">
                            <img 
                                src="https://covers.openlibrary.org/b/olid/<%= post.book_cover_id.trim() %>-M.jpg"
                                alt="Cover for <%= post.title %>"
                                class="cover-image"
                                onerror="this.src='/images/default-cover.jpg'"
                            >
                        </div>
                        
                        <div class="post-details">
                            <div class="post-summary">
                                <p class="summary-text"><%= post.summary %></p>
                                <button>
                                    <a class="view-btn" href="/view/<%=post.id%>">Read Full</a> 
                                </button>
                            </div>
                            
                            <div class="post-meta">
                                <small class="post-date"><%= post.summary_date %></small>
                                <div class="post-rating">
                                    <span class="rating-value"><%= post.rating %></span>
                                    <span class="rating-scale">/5</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <footer class="post-actions">
                        <a href="/post/<%= post.id %>" class="btn btn-outline edit-btn">Edit</a>
                        <a href="/delete-post/<%= post.id %>" class="btn btn-danger delete-btn">Delete</a>
                    </footer>
                </article>
            <% }) %>
        </main>
    </div>
</body>
</html>